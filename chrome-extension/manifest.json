{
  "name": "Time Tracker",
  "version": "1.0",
  "description": "Keeps track of how much time you spend on various web sites.",
  "background_page": "background.html",
  "permissions": [
    "tabs"
  ],
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_title": "Time Tracker",
    "popup": "popup.html"
  },
  "icons": { "128": "images/icon.png" },
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["idle.js"]
    }
  ]
}
